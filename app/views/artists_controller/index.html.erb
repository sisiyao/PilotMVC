<head>
  <head>
    <link rel="stylesheet" href="/stylesheets/artist_index.css" type="text/css">
  </head>
</head>

<body>
  <div class="header">
    <div class="button"><a href="/">MyMusicApp [built with Ruby on Pilot framework]</a></div>
    <div class="button"><a href="/artists/new">+ Artist</a></div>
  </div>
  <div class="filler"></div>
  <h1>Artists</h1>
    <div class="artists">
      <% @artists.each do |artist| %>
        <div class="artist">
          <a  href="/artists/<%= artist.id %>/edit">
            <div class="artist-img"><img src="<%= artist.image_url %>"/></div>
            <h2><%= artist.name %></h2>
          </a>
        </div>
      <% end %>
    </div>
</body>
